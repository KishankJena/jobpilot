# Application Settings
APP_NAME=JobPath
APP_VERSION=1.0.0
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql+asyncpg://jobpath_user:secure_password@localhost:5432/jobpath_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=True
DB_ECHO=False

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_CREDENTIALS=True

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
